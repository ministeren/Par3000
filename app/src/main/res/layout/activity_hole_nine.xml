<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ministeren.par3000.HoleNine"
    android:background="@drawable/ball_single_bw_169_720">

    <TableLayout
        android:id="@+id/controlTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/overskrift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HUL 1"
                android:layout_column="0"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/buttonBarStyle">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/back"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:layout_weight="2"
                android:background="#00ffff"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/home"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_weight="1"
                android:background="#00ffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/summary"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:layout_weight="2"
                android:background="#00ffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/strokeTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/controlTable"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

        <TableRow
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1.0"
            android:minHeight="75dp">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="0"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="1"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="2"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="3"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1.0"
            android:minHeight="75dp">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="0"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="1"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="2"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stroke8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8+"
                android:textColor="#000000"
                android:background="#00ffff"
                android:layout_column="3"
                android:layout_weight="0.25"
                android:layout_margin="5dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/scoreTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/strokeTable"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="120dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
